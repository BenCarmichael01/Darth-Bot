{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-await-in-loop": 0,
    "class-methods-use-this": "off",
    "no-unneeded-ternary": "off",
    "linebreak-style": [ "error", "windows" ],
    "import/no-unresolved": [
      2,
      { "caseSensitive": false }
    ],
	"import/no-dynamic-require": 0,
    "indent": [
      "error",
      "tab",
      { "SwitchCase": 1 }
    ],
    "no-tabs": 0,
    "no-console": 0,
    "no-plusplus": [
      "error",
      { "allowForLoopAfterthoughts": true }
    ],
    "import/extensions": [
      0,
      {
        "js": "ignorePackages",
        "json": "ignorePackages"
      }
    ],
    "no-underscore-dangle": 0,
    "max-len": [
      0,
      {
        "ignoreComments": true,
        "code": 110
      }
    ],
    "consistent-return": "off",
    "no-bitwise": "off",
    "no-var": "off",
    "vars-on-top": "off",
	"implicit-arrow-linebreak": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [ ".js", ".jsx", ".cjs", ".mjs" ],
        "moduleDirectory": [ "node_modules", "./" ]
      }
    }
  }
}